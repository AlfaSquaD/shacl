# baseURI: http://datashapes.org/sh/tests/core/property/maxCount-001.test
# imports: http://datashapes.org/dash
# prefix: ex

@prefix dash: <http://datashapes.org/dash#> .
@prefix ex: <http://datashapes.org/sh/tests/core/property/maxCount-001.test#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<http://datashapes.org/sh/tests/core/property/maxCount-001.test>
  rdf:type owl:Ontology ;
  owl:versionInfo "Created with TopBraid Composer"^^xsd:string ;
  owl:imports <http://datashapes.org/dash> ;
.
ex:GraphValidationTestCase
  rdf:type dash:GraphValidationTestCase ;
  dash:expectedResult [
      rdf:type sh:ValidationResult ;
      sh:focusNode ex:InvalidPerson ;
      sh:predicate ex:firstName ;
      sh:severity sh:Violation ;
      sh:subject ex:InvalidPerson ;
    ] ;
.
ex:InvalidPerson
  rdf:type ex:Person ;
  ex:firstName "George"^^xsd:string ;
  ex:firstName "John"^^xsd:string ;
  rdfs:label "Invalid person"^^xsd:string ;
.
ex:Person
  rdf:type rdfs:Class, sh:Shape ;
  rdfs:label "Person"^^xsd:string ;
  rdfs:subClassOf rdfs:Resource ;
.
ex:PersonShape
  rdf:type sh:Shape ;
  sh:property [
      sh:datatype xsd:string ;
      sh:maxCount 1 ;
      sh:predicate ex:firstName ;
    ] ;
  sh:scopeClass ex:Person ;
  sh:scopeNode ex:ValidResource ;
.
ex:ValidResource
  rdf:type ex:Person ;
  ex:firstName "John"^^xsd:string ;
  rdfs:label "Valid resource"^^xsd:string ;
.
