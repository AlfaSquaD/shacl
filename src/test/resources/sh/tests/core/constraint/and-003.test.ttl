# baseURI: http://datashapes.org/sh/tests/core/constraint/and-003.test
# imports: http://datashapes.org/dash
# prefix: ex

@prefix dash: <http://datashapes.org/dash#> .
@prefix ex: <http://datashapes.org/sh/tests/core/constraint/and-003.test#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<http://datashapes.org/sh/tests/core/constraint/and-003.test>
  rdf:type owl:Ontology ;
  rdfs:label "Test of and-003" ;
  owl:imports <http://datashapes.org/dash> ;
  owl:versionInfo "Created with TopBraid Composer" ;
.
ex:AndShape
  rdf:type sh:Shape ;
  sh:constraint [
      sh:and (
          [
            sh:property [
                sh:predicate ex:property1 ;
                sh:maxCount 1 ;
              ] ;
          ]
          ex:RecursiveShape
        ) ;
    ] ;
  sh:scopeNode ex:InvalidInstance1 ;
  sh:scopeNode ex:InvalidInstance2 ;
  sh:scopeNode ex:ValidInstance1 ;
.
ex:GraphValidationTestCase
  rdf:type dash:GraphValidationTestCase ;
  dash:expectedResult [
      rdf:type dash:FailureResult ;
      sh:focusNode ex:InvalidInstance1 ;
      sh:severity sh:Violation ;
    ] ;
  dash:expectedResult [
      rdf:type sh:ValidationResult ;
      sh:focusNode ex:InvalidInstance2 ;
      sh:severity sh:Violation ;
    ] ;
.
ex:InvalidInstance1
  ex:property2 ex:InvalidInstance1 ;
.
ex:InvalidInstance2
  ex:property1 "One" ;
  ex:property1 "Two" ;
.
ex:RecursiveShape
  rdf:type sh:Shape ;
  sh:property [
      sh:predicate ex:property2 ;
      sh:valueShape ex:RecursiveShape ;
    ] ;
.
ex:ValidInstance1
  ex:property1 "One" ;
.
